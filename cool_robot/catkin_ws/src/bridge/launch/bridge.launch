<?xml version="1.0" encoding="UTF-8" ?>

<launch>
  <arg name="wlan0" default="192.168.43.165" />

   <node pkg="pkg_cv" type="camera.py" name="camera" output="screen"></node>
   <node pkg="pkg_cv" type="ultrasonic.py" name="ultrasonic" output="screen"></node>

   <node pkg="bridge" type="bridge.py" name="bridge_img_detection" args="$(arg wlan0)" output="screen">
    <param name="bridge_type" value="Image"/>
    <param name="bridge_from" value="/img_detection"/>
    <param name="bridge_to" value="/bridge/img_detection"/>
  </node>

  <node pkg="bridge" type="bridge.py" name="bridge_detection_info" args="$(arg wlan0)" output="screen">
    <param name="bridge_type" value="Int32MultiArray"/>
    <param name="bridge_from" value="/detection_info"/>
    <param name="bridge_to" value="/bridge/detection_info"/>
  </node>

  <node pkg="bridge" type="bridge.py" name="bridge_ultrasonic" args="$(arg wlan0)" output="screen">
    <param name="bridge_type" value="Float32MultiArray"/>
    <param name="bridge_from" value="/ultrasonic"/>
    <param name="bridge_to" value="/bridge/ultrasonic"/>
  </node>



</launch>